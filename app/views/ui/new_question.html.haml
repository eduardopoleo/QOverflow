.container
  %nav.navbar.navbar-default
    .container-fluid
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => "#"} 
          %span#q> Q
          %span#o> Overflow
      / Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %button.btn.btn-danger.navbar-btn.navbar-right{:type => "button"} Add a question
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Hanna Bates
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                %a{:href => "#"} Profile
              %li.divider
              %li
                %a{:href => "#"} Sign out
  .row
    .col-md-12
      %h1.text-center What's your question?

  %form.form-horizontal.form-margin
    .form-group
      %label.col-sm-2.col-sm-offset-1.control-label{:for => "title"} Title
      .col-sm-6
        %input#title.form-control{:placeholder => "Enter question title", :type => "text"}/ 
    .form-group
      %label.col-sm-2.col-sm-offset-1.control-label{:for => "description"} Description
      .col-sm-6
        %textarea#description.form-control{:placeholder => "Enter Description", :rows => "9"}
    .form-group
      %label.col-sm-2.col-sm-offset-1.control-label{:for => "category"} Category 
      .col-sm-6
        %select#category.form-control
          %option Suspense 
          %option Rcok
          %option yuca 
          %option papa
    .form-group
      .col-sm-offset-3.col-sm-6
        %button.btn.btn-info{:type => "submit"} Post!

    %footer.footer
      %small
        Qoverflow @2015
        by
        %a{:href => "http://eduardo-blog.herokuapp.com/"} Eduardo Poleo
      %nav
        %ul
          %li
            %a{:href => "https://github.com/eduardopoleo"}
              %i.fa.fa-github
          %li
            %a{:href => "http://ca.linkedin.com/pub/eduardo-poleo/56/364/a4"}
              %i.fa.fa-linkedin-square
