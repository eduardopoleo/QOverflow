#session
  .row
    .col-lg-4.col-xs-offset-3.text-center 
      %h3#logo
        %span#q> Q
        %span#o> overflow
  .row
    .col-xs-offset-3
      %small#small-intro
        A world of questions... The source of knowledge
  .row
    .col-lg-6 
      .sign-up
        %h3 Sign Up
        = bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-8") do |f|
          = f.email_field :email
          = f.text_field :username
          = f.password_field :password
          %p.help-block By clicking Sing Up your are entering in a weird world full of spiders and crazy ol ladies.
          .form-group     
            .col-lg-offset-4.col-lg-8
              = f.submit 'Sign up', class: ' pull-right btn btn-danger'
    .col-lg-5 
      .login
        %h3 Log In
        = form_tag login_path do
          .form-group
            = text_field_tag(:username, nil,  class: 'form-control', placeholder: 'Username')
          .form-group
            = password_field_tag(:password, nil,  class: 'form-control', placeholder: 'Password')
          .form-group
            = submit_tag('Log In', class: 'btn btn-danger pull-right')
  .footprint
    %small
      @2015
      by
      %a{:href => "http://eduardo-blog.herokuapp.com/"} Eduardo Poleo
      for parody and training purposes
